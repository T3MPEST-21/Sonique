{
  "expo": {
    "name": "Sonique",
    "slug": "Sonique",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sonique-logo.png",
    "scheme": "sonique",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/sonique-logo.png",
        "backgroundImage": "./assets/images/sonique-logo.png",
        "monochromeImage": "./assets/images/sonique-logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["FOREGROUND_SERVICE", "FOREGROUND_SERVICE_MEDIA_PLAYBACK"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/sonique-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/sonique-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-audio",
        {
          "androidForegroundService": true,
          "androidFSTypes": ["mediaPlayback"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
